<div class="container">
<%= form_with model: @book do |form| %>
    <div>
        <%= form.label :name %><br/>
        <%= form.text_field :name, class: 'text-field' %><br/>
    </div>
    <div>
        <%= form.label :release_date %><br/>
        <%= form.text_field :release_date, class: 'text-field' %><br/>
    </div>
    <div>
        <%= form.label :author_id %><br/>
        <%= form.text_field :author_id, class: 'text-field' %><br/>
    </div>
    <div>
        <%= form.submit 'Submit', class:'button' %>
    </div>
<% end %>
</div>